<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_fondo"
    tools:context=".UE.UEInicio">

    <TextView
        android:id="@+id/textoInicioUE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Mis Viajes"
        android:textColor="@color/colorBlanco"
        android:textSize="25dp"
        android:textAlignment="center"
        />
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapaUbicacionTransporte"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/textoInicioUE"
        android:layout_margin="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/listaTransportes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/Registrar"
        android:layout_margin="15dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/mapaUbicacionTransporte"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/Registrar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_blanco_redondo"
        android:text="Nuevo viaje"
        android:textAllCaps="false"
        android:textSize="20sp" />


</RelativeLayout>
