<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UT.UTNuevoTransporte">

    <EditText
        android:id="@+id/UTPlacas"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/txtPlacas"
        android:hint="NÃºmero de placa"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/UTTipo"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/UTTonelaje"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@+id/txtTipo"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/UTEmpresa"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/UTTipo"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@+id/txtUTEmpresa"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtUTEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTipo"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="Empresa"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTonelaje"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="31dp"
        android:text="Tipo"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/UTTonelaje"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/UTPlacas"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/txtTonelaje"
        android:inputType="number"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtPlacas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:text="Placas"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtTonelaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPlacas"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="Tonelaje"
        android:textSize="25sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRAR"
        android:id="@+id/UTRegistrar"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/UTEmpresa"/>

</RelativeLayout>