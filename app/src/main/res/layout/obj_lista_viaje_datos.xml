<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_viaje_datos"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_blanco_redondo">

        <TextView
            android:id="@+id/obj_viaje_nombre"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:hint="DHL"
            android:textColor="@color/colorNegro"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/obj_viaje_temperatura"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/obj_viaje_nombre"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorNegro"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/obj_viaje_proximidad"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/obj_viaje_temperatura"
            android:layout_toEndOf="@+id/obj_viaje_temperatura"
            android:hint="27/05/2019 - 15:00"
            android:textColor="@color/colorNegro"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/obj_viaje_humedad"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/obj_viaje_nombre"
            android:layout_below="@+id/obj_viaje_nombre"
            android:hint="$1250"
            android:textColor="@color/colorNegro"
            android:textSize="15dp" />



    </RelativeLayout>

</android.support.v7.widget.CardView>